/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run UHVDB/toolkit -profile test_prhist,singularity

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 2,
        memory: '7.GB',
        time: '1.h',
    ]
}

params {
    //-----------------------------------
    // General options
    //-----------------------------------
    config_profile_name         = 'Test phist'
    config_profile_description  = 'Minimal test dataset to check full phist subworkflow'

    //-----------------------------------
    // UHVDB annotation options
    //-----------------------------------
    // phist options
    bacterial_host_urls = "assets/test_datasets/test_host_file.csv"
    chunk_size          = 2
}
